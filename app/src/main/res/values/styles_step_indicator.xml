<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.StepIndicator" parent="">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.StepIndicator.Step" parent="">
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/white_gray_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/circle_while_fill_selector</item>
    </style>

    <style name="Widget.StepIndicator.Step.Large">
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.StepIndicator.Label" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:paddingTop">6dip</item>
        <item name="android:paddingBottom">6dip</item>
    </style>

</resources>